{
  "description": "Adds a page action to toggle whether link is external or not.",
  "manifest_version": 2,
  "name": "apply-link-checker",
  "version": "1.0",
  "homepage_url": "https://github.com/ShahAnuj2610/tree/master/link-checker",

  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },

  "page_action": {
    "default_icon": "icons/off.svg",
    "browser_style": true
  },

  "permissions": ["activeTab", "tabs"]
}
